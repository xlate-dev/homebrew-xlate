{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "module": "es2022",
    "moduleResolution": "node",
    "strict": true,
    "outDir": "lib",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": false
  },
  "include": ["src/**/*"]
}
